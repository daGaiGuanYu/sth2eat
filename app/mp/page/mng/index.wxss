.new-list {
  width: 3.8rem;
  line-height: 3.8rem;
  font-size: 2.2rem;
  color: #fff;
  text-align: center;
  background: rgb(7, 9, 35, .5);
  border-radius: 50%;
  box-shadow: 0 0 .6rem #aaa;

  position: fixed;
  right: 6rem;
  bottom: 30%;

  transition: all 0.3s;
}

.new-list:active {
  transform: scale(1.1, 1.1);
  opacity: 0.8;
}
