page {
  --margin: .9em;
}
form.full-width {
  margin-bottom: 2em;
  --border: .2px solid #eee;
}

.input-group {
  padding: 0 var(--margin);
  border-bottom: var(--border);
  border-top: var(--border);
  margin-bottom: var(--margin);
  background: #fff;
}

input.row, .full-width .input {
  padding: var(--margin) 0;
}
input.row:not(:last-child), .full-width .input:not(:last-child) {
  border-bottom: var(--border);
}

.full-width .input {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.full-width .placeholder {
  color: #888;
}

.full-width .input .arrow {
  font-size: 1.1em;
  transform: scale(1, 1.3);
  font-weight: 300;
  color: #aaa;
}

button.row, .full-width button {
  margin: calc(var(--margin) / 1.5) var(--margin);
}
.bottom-btn-group {
  position: fixed;
  bottom: 2em;
}
button.row {
  width: calc(100vw - calc(2 * var(--margin)));
}